<%- include('./partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" id="title" name="postTitle" type="text">
        <label for="post">Post</label>
        <textarea class="form-control" class="input-textarea" id="post" name="postBody" rows="4" cols="50"> </textarea>

    </div>
    <button name="btnpublish" class="btn btn-lg btn-primary" type="submit">Publish</button>
</form>
